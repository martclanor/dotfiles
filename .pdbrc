# Configuration for Python Debugger (pdb)

# Alias for "print"
alias p pp

# Alias for listing context around the current line
alias ll l .

# Breakpoint handling
# 'break' command with a specified condition
alias b break

# 'delete' command to remove breakpoints
alias cl clear

# Enable tab completion
set complete

# Pretty print by default
set print pretty

# Automatically list source code when landing in a pdb prompt
set auto list

# Automatically open post-mortem debugging on an unhandled exception
set auto pdb

# Show source code during traceback
set print stack trace
